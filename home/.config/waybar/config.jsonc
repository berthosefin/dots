{
  "layer": "top",
  "spacing": 0,
  "height": 0,
  "margin-left": 5,
  "margin-right": 5,
  "margin-top": 5,
  "modules-left": ["custom/launcher", "hyprland/workspaces", "wlr/taskbar"],
  "modules-center": ["hyprland/window"],
  "modules-right": [
    "tray",
    "pulseaudio",
    "backlight",
    "network",
    "group/hardware",
    "clock",
    "group/group-power",
  ],
  "hyprland/workspaces": {
    "format": "{name}",
    "show-special": true,
  },
  "hyprland/window": {
    "format": "{}",
    "max-length": 35,
    "rewrite": {
      "(.*) ‚Äî Mozilla Firefox": "üåé $1",
    },
    "separate-outputs": true,
    "tooltip": false,
  },
  "clock": {
    "format": "ÔÄó {:%H:%M}",
    "format-alt": "ÔóØ {:%d %b, %Y}",
    "tooltip-format": "{calendar}",
    "calendar": {
      "mode": "month",
      "format": {
        "today": "<b><u>{}</u></b>",
      },
    },
  },
  "tray": {
    "spacing": 10,
    "tooltip": false,
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-bluetooth": "{icon} {volume}%Ôäî",
    "format-muted": "ÔÄ¶",
    "format-icons": {
      "alsa_output.pci-0000_00_1f.3.analog-stereo": "ÔÄ® ",
      "alsa_output.pci-0000_00_1f.3.analog-stereo-muted": "Óª®Óå≠",
      "headphone": "ÔÄ•",
      "hands-free": "Ôñê",
      "headset": "Ôñê",
      "phone": "ÔÇï",
      "phone-muted": "Ó¥ó",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄß", "ÔÄ®"],
    },
    "scroll-step": 1,
    "on-click": "pamixer -t",
    "on-click-right": "pavucontrol",
    "ignored-sinks": ["Easy Effects Sink"],
    "tooltip": false,
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-icons": ["ÔÜÖ", "ÔÑë"],
    "tooltip": false,
  },
  "network": {
    "interface": "wlo1",
    "format": "{ifname}",
    "format-wifi": "Ôá´  {signalStrength}%",
    "format-ethernet": "Û∞äó  {ifname}",
    "format-disconnected": "Ôá´ !", //An empty format will hide the module.
    "tooltip-format": "Û∞äó  {ifname} via {gwaddr}",
    "tooltip-format-wifi": "Ôá´  {essid} ({signalStrength}%)",
    "tooltip-format-ethernet": "ÔÉÅ  {ipaddr}/{cidr}",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50,
    "on-click": "networkmanager_dmenu",
  },
  "cpu": {
    "interval": 10,
    "format": "Ôãõ {usage}%",
    "max-length": 10,
  },
  "memory": {
    "interval": 30,
    "format": "ÔÉâ {percentage}%",
    "max-length": 10,
  },
  "battery": {
    "bat": "BAT1",
    "interval": 10,
    "states": {
      "full-at": 96,
      "warning": 30,
      "critical": 15,
    },
    "format": "{icon}  {capacity}%",
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
    "max-length": 25,
  },
  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 14,
    // "icon-theme": "Numix-Circle",
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "ignore-list": ["kitty", "xfce4-terminal", "xdman-Main"],
    "app_ids-mapping": {
      "firefoxdeveloperedition": "firefox-developer-edition",
    },
    "rewrite": {
      "Firefox Web Browser": "Firefox",
      "Foot Server": "Terminal",
    },
  },
  "custom/launcher": {
    "format": "Apps",
    "tooltip": false,
    "on-click": "rofi -show drun",
  },
  "custom/power": {
    "format": "‚èª",
    "tooltip": false,
    "on-click": "~/.config/waybar/scripts/confirm-action.sh poweroff",
  },
  "custom/quit": {
    "format": "Û∞óº",
    "tooltip": false,
    "on-click": "~/.config/waybar/scripts/confirm-action.sh quit",
  },
  "custom/suspend": {
    "format": "‚èæ",
    "tooltip": false,
    "on-click": "systemctl suspend",
  },
  "custom/lock": {
    "format": "Û∞çÅ",
    "tooltip": false,
    "on-click": "hyprlock",
  },
  "custom/reboot": {
    "format": "Û∞úâ",
    "tooltip": false,
    "on-click": "~/.config/waybar/scripts/confirm-action.sh reboot",
  },
  "group/hardware": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "not-power",
      "transition-left-to-right": false,
    },
    "modules": ["battery", "cpu", "memory"],
  },
  "group/group-power": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "not-power",
      "transition-left-to-right": false,
    },
    "modules": [
      "custom/power",
      "custom/quit",
      "custom/lock",
      "custom/suspend",
      "custom/reboot",
    ],
  },
}
